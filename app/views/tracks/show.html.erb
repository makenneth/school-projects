<div class="col-md-6 col-md-offset-3 track-details">

   <h2><%= @track.title %></h2>

      <dl>
         <dt>Track lyrics</dt>
         <dd><%= ugly_lyrics(@track.lyrics) %></dd>
      </dl>
      <dl>
         <dt>Track type</dt>
         <dd><%= @track.bonus %></dd>
      </dl>
      <dl>
         <dt>Album title</dt>
         <dd><%= @track.album.title %></dd>
      </dl>
      <dl>
         <dt>Album Type</dt>
         <dd><%= @track.album.album_type %></dd>
      </dl>
      <dl>
         <dt>Band name</dt>
         <dd><%= @track.band.name %></dd>
      </dl>
      <% if is_admin? %>
         <div class="row">
            <div class="col-md-4">
               <%= link_to "Edit the track", edit_track_url(@track), class: "btn btn-warning"%>
            </div>
            <div class="col-md-4">
               <%= button_to "Remove the track", track_url(@track), method: :delete, class: "btn btn-danger"%>
            </div>
         </div>
      <% end %>
      <div class="row">
         <div class="col-md-4">
            <%= link_to "Back to album", album_url(@track.album), class: "btn btn-primary" %>
         </div>
         <div class="col-md-4">
            <%= link_to "Back to Band page", band_url(@track.band), class: "btn btn-primary"  %>
         </div>
         <div class="col-md-4">
            <%= link_to "Home Page", bands_url, class: "btn btn-primary"  %>
         </div>
      </div>
      <h3>Comments:</h3>
      <% if @track.notes.empty? %>
         <p>Be the first to comment on this track!</p>
      <% else %>
         <% @track.notes.each do |note| %>
            <%= render 'notes/note', note: note %>
         <% end %>
      <% end %>
      <br>
      <h3>New Comment:</h3>
      <%= render "notes/form", note: @note, track: @track%>

</div>
